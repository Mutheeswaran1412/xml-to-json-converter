                          setSelectedFile(null);
                          setXmlInput('');
                          setCustomFilename('');
                          setDatasets([]);
                        }
                        loadUploadedFiles();
                      }}
                      className="text-red-400 hover:text-red-300 text-xs"
                    >
                      Delete
                    </button>
